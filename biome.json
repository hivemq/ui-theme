{
	"$schema": "https://biomejs.dev/schemas/1.7.0/schema.json",
	"files": {
		"ignore": [
			"**/__generated__/*"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"style": {
				"useBlockStatements": "error",
				"useShorthandArrayType": "error",
				"noShoutyConstants": "warn"
			}
		}
	},
	"formatter": {
		"indentWidth": 2,
		"indentStyle": "space",
		"lineWidth": 100
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"quoteStyle": "single"
		}
	}
}