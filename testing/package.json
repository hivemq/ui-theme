{
  "name": "@hivemq/ui-theme-testing",
  "version": "0.0.0",
  "type": "module",
  "license": "Apache-2.0",
  "scripts": {
    "dev": "vite --host",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "generate": "pnpm generate:theme",
    "generate:theme": "chakra typegen ./src/theme.ts",
    "postinstall": "pnpm generate",
    "test": "pnpm safetest",
    "test:ci": "pnpm safetest:ci",
    "safetest": "cross-env OPT_URL=${OPT_URL:-http://localhost:3000/} vitest --config vite.safetest.config",
    "safetest:ci": "rm -f artifacts.json && pnpm safetest --run --bail=5",
    "safetest:regenerate-screenshots": "pnpm safetest --run --update"
  },
  "engines": {
    "node": "20",
    "pnpm": "9"
  },
  "dependencies": {
    "@chakra-ui/react": "^3.14.2",
    "@emotion/react": "^11.14.0",
    "@fontsource/raleway": "^5.2.5",
    "@fontsource/roboto": "^5.2.5",
    "@fontsource/roboto-mono": "^5.2.5",
    "@hivemq/ui-theme": "workspace:^",
    "framer-motion": "^12.6.2",
    "lucide-react": "^0.485.0",
    "next-themes": "^0.4.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@chakra-ui/cli": "^3.14.2",
    "@types/node": "^22.13.14",
    "@types/react": "^18.3.16",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "cross-env": "^7.0.3",
    "safetest": "^0.1.13",
    "vite": "^6.2.3",
    "vite-plugin-singlefile": "^2.2.0",
    "vitest": "^3.0.9"
  }
}
