{
  "name": "@hivemq/ui-theme-testing",
  "version": "0.0.0",
  "type": "module",
  "license": "Apache-2.0",
  "scripts": {
    "dev": "vite --host",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "generate": "pnpm generate:theme",
    "generate:theme": "chakra typegen ./src/theme.ts",
    "postinstall": "pnpm generate",
    "test": "pnpm safetest",
    "test:ci": "pnpm safetest:ci",
    "safetest": "cross-env OPT_URL=${OPT_URL:-http://localhost:3000/} vitest --config vite.safetest.config",
    "safetest:ci": "rm -f artifacts.json && pnpm safetest --run --bail=5",
    "safetest:regenerate-screenshots": "pnpm safetest --run --update"
  },
  "engines": {
    "node": "22",
    "pnpm": "10"
  },
  "dependencies": {
    "@chakra-ui/react": "^3.27.1",
    "@emotion/react": "^11.14.0",
    "@fontsource/raleway": "^5.2.8",
    "@fontsource/roboto": "^5.2.8",
    "@fontsource/roboto-mono": "^5.2.8",
    "@hivemq/ui-theme": "workspace:^",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.546.0",
    "next-themes": "^0.4.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@chakra-ui/cli": "^3.27.1",
    "@types/node": "^24.8.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.0.4",
    "cross-env": "^10.1.0",
    "safetest": "^0.1.13",
    "vite": "^7.1.10",
    "vite-plugin-singlefile": "^2.3.0",
    "vitest": "^3.2.4"
  }
}
