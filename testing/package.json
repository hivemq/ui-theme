{
  "name": "@hivemq/ui-theme-testing",
  "version": "0.0.0",
  "type": "module",
  "license": "Apache-2.0",
  "scripts": {
    "dev": "vite --host",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "generate": "pnpm generate:theme",
    "generate:theme": "chakra typegen ./src/theme.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run --coverage",
    "test:unit:watch": "vitest",
    "test:ci": "pnpm test:unit && pnpm safetest:ci",
    "safetest": "cross-env OPT_URL=${OPT_URL:-http://localhost:3000/} vitest --config vite.safetest.config",
    "safetest:ci": "rm -f artifacts.json && CI=true pnpm safetest --run --bail=5",
    "safetest:regenerate-screenshots": "pnpm safetest --run --update"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@chakra-ui/react": "^3.29.0",
    "@emotion/react": "^11.14.0",
    "@fontsource/raleway": "^5.2.8",
    "@fontsource/roboto": "^5.2.8",
    "@fontsource/roboto-mono": "^5.2.8",
    "@hivemq/ui-theme": "workspace:^",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.553.0",
    "next-themes": "^0.4.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@chakra-ui/cli": "^3.29.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/coverage-v8": "^4.0.12",
    "@vitest/ui": "^4.0.12",
    "cross-env": "^10.1.0",
    "jsdom": "^26.0.0",
    "safetest": "^0.1.13",
    "vite": "^7.2.2",
    "vite-plugin-singlefile": "^2.3.0",
    "vitest": "^4.0.12"
  }
}
